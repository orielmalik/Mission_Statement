<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bck_watercolo"

    tools:context=".Login">

    <FrameLayout
        android:id="@+id/frame_login"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/forgetlogin"
        android:layout_width="wrap_content"
        android:layout_height="175dp"
        android:layout_marginStart="190dp"
        android:layout_marginTop="120dp"
        android:layout_weight="1"
        android:text="forget\n password"
        android:textSize="30sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/back_forget"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_back"
        android:visibility="invisible"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnxStartLogin"
        android:layout_width="223dp"
        android:layout_height="76dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="80dp"
        android:contentDescription="Start login button"
        android:focusable="true"
        android:layout_marginBottom="10dp"
        android:text="Start"
        android:textSize="45sp" />
    </androidx.appcompat.widget.LinearLayoutCompat>

</LinearLayout>