<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="16"
    android:background="@drawable/bck_py"
    tools:context=".Register">"



        <FrameLayout
            android:id="@+id/frmae_Register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="19dp"
            android:layout_marginTop="79dp"
            android:layout_weight="15"/>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/info_center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="centerBTN"
            android:src="@drawable/ic_infoc" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnxStartRegister"
            android:layout_width="223dp"
            android:layout_height="70dp"
            android:layout_marginStart="40dp"
            android:contentDescription="Start registration button"
            android:focusable="true"
            android:text="Start"
            android:textSize="45sp" />
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="16dp"
            android:visibility="gone" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:srcCompat="@drawable/lego_builder" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</LinearLayout>
